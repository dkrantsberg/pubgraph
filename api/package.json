{
  "name": "pubgraph-api",
  "version": "1.0.0",
  "description": "Fastify API application for PubGraph",
  "main": "dist/pipeline.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && node dist/pipeline.js",
    "dev": "nodemon --exec \"npm run build && node dist/pipeline.js\" --ext ts --watch src",
    "dev:ts": "ts-node-esm src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "check": "npm run type-check && npm run lint"
  },
  "keywords": [
    "fastify",
    "api",
    "nodejs",
    "pubgraph"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/env": "^4.2.0",
    "dotenv": "^16.3.1",
    "@aws-sdk/client-bedrock-runtime": "^3.450.0",
    "csv-parse": "^5.5.2",
    "neo4j-driver": "^5.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
